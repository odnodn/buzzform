{
  "name": "@buildnbuzz/buzzform",
  "version": "0.1.2",
  "description": "Simple React form library for shadcn/ui. Declare fields, customize rendering, get live validation with minimal boilerplate.",
  "author": "Parth Lad <parth@buildnbuzz.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/buildnbuzz/buzzform.git"
  },
  "homepage": "https://form.buildnbuzz.com",
  "keywords": [
    "react",
    "forms",
    "shadcn",
    "nextjs",
    "react-hook-form",
    "zod"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./schema": {
      "import": {
        "types": "./dist/schema.d.mts",
        "default": "./dist/schema.mjs"
      },
      "require": {
        "types": "./dist/schema.d.ts",
        "default": "./dist/schema.js"
      }
    },
    "./rhf": {
      "import": {
        "types": "./dist/rhf.d.mts",
        "default": "./dist/rhf.mjs"
      },
      "require": {
        "types": "./dist/rhf.d.ts",
        "default": "./dist/rhf.js"
      }
    },
    "./zod": {
      "import": {
        "types": "./dist/zod.d.mts",
        "default": "./dist/zod.mjs"
      },
      "require": {
        "types": "./dist/zod.d.ts",
        "default": "./dist/zod.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "nanoid": "^5.0.9"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-hook-form": "^7.0.0",
    "zod": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "react-hook-form": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.15.3",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.39.1",
    "react": "^19.0.0",
    "react-hook-form": "^7.69.0",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.51.0",
    "zod": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
